<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="com.ayst.adplayer.settings.CopySettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
	android:orientation="vertical"
	android:visibility="gone">

        <com.ayst.adplayer.view.XianHeiFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timing_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big_big" />

        <com.ayst.adplayer.view.XianHeiFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/timing_setting_intro"
            android:textColor="@color/white_70"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/white_30"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.ayst.adplayer.view.XianHeiFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_power_manager"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/btn_power_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_common_selector" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.ayst.adplayer.view.XianHeiFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timing_power_on"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/btn_power_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_common_selector"
                android:visibility="gone" />

            <com.ayst.adplayer.view.XianHeiFontTextView
                android:id="@+id/tv_power_on_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="61dp"
                android:background="@drawable/bg_common_selector"
                android:focusable="true"
                android:text="24:00"
                android:textColor="@color/white_70"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.ayst.adplayer.view.XianHeiFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timing_power_off"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/btn_power_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_common_selector"
                android:visibility="gone" />

            <com.ayst.adplayer.view.XianHeiFontTextView
                android:id="@+id/tv_power_off_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="60dp"
                android:background="@drawable/bg_common_selector"
                android:focusable="true"
                android:text="24:00"
                android:textColor="@color/white_70"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/white_30" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.ayst.adplayer.view.XianHeiFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timing_reboot"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/btn_reboot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_common_selector"/>

            <com.ayst.adplayer.view.XianHeiFontTextView
                android:id="@+id/tv_reboot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/btn_reboot"
                android:background="@drawable/bg_common_selector"
                android:focusable="true"
                android:text="12:00"
                android:textColor="@color/white_70"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
