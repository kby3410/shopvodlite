<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:id="@+id/group_pick_file_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:background="@drawable/bg_circle_selector"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_back_normal"/>

        <com.ayst.adplayer.view.XianHeiFontTextView
            android:id="@+id/tv_cur_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/white_30"/>

    <ListView
        android:id="@+id/lv_files"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>